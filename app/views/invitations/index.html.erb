<div class="invitation_list">
  <h3> You have <%= @invitations.count %> invations</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Trip</th>
        <th>From Who</th>
        <th>Contact</th>
        <th>Accept(Y/N)</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @invitations.each do |invitation| %>
        <tr>
          <td><%= invitation.trip.name %></td>
          <td><%= invitation.user_name %></td>
          <td><%= invitation.user_email %></td>
          <td>
            <%= link_to(invitation, method: :put, data: { confirm: 'Are you sure?' } ) do %>
            <p>Accept &#9745;<p>
            <% end %>
          </td>
          <td>
            <%= link_to(invitation, method: :delete, data: { confirm: 'Are you sure?' } ) do %>
            <p>Decline &#9746;<p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to trips_path do %> <h4>Make New Trip &#9969;<h4> <% end %>
  <br>
  <span class="glyphicon glyphicon-pencil" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Invite friends to join your trips!
  </span>
  <div class="collapse" id="collapseExample">
    <%= render 'form' %>
  </div>

</div>