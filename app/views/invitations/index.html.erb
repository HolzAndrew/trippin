<p id="notice"><%= notice %></p>

<h1>Listing Invitations</h1>

<table>
  <thead>
    <tr>
      <th>Trip</th>
      <th>From Who</th>
      <th>Contact</th>
      <th>Accept</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.trip.name %></td>
        <td><%= invitation.user_name %></td>
        <td><%= invitation.user_email %></td>
        <td><%= link_to 'Show', invitation %></td>
        <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invitation', new_invitation_path %>
