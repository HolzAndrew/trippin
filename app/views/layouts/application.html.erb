<!DOCTYPE html>
<html>
<head>
  <title>Trippin</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
</head>
<body>

<div class="user_status">
  <% if current_user %>
     <div class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        <img id="user_status" src=<%= current_user.image_url %> class="img-circle" height="42" width="42" >
        <%= current_user.name %>
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <li><a href="/users/<%= current_user.id %>">Show Profile</a></li>
        <li><a href="/users/<%= current_user.id %>/edit">Edit Profile</a></li>
        <li><%= link_to "Logout", '/logout' %></li>
      </ul>
    </div>
  <% end %>  
</div>   

<div class="user_invitation">
  <% if current_user %>
    <button class="btn btn-default" type="button" id="user_invitation" data-toggle="" aria-haspopup="true" aria-expanded="true">
      <span class="glyphicon glyphicon-envelope"></span>
    </button>
  <% end %>  
</div>

<%= yield %>



</body>
</html>


