<!DOCTYPE html>
<html>
<head>
  <title>Trippin</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <p id="notice"><%= notice %></p>

  <div class="user_status">
    <% if current_user %>
       <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          <img id="user_status" src=<%= current_user.image_url %> class="img-circle" height="42" width="42" >
          <%= current_user.name %>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
          <li><a href="/users/<%= current_user.id %>">Show Profile</a></li>
          <li><a href="/users/<%= current_user.id %>/edit">Edit Profile</a></li>
          <li><%= link_to "Logout", '/logout' %></li>
        </ul>
      </div>
    <% end %>  
  </div> 

  <div class="app_name">
  	<h1> DAY TRIPPR </h1>
  </div>  

  <div class="user_invitation" id="user_invitation">
    <% if current_user %>
    <button id="dLabel" type="button" id="user_invitation" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      <span class="glyphicon glyphicon-envelope"></span>
      <span class="caret"></span>
    </button>
    <% end %>  
    <div class="dropdown-menu" aria-labelledby="dLabel">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Trip</th>
            <th>From Who</th>
            <th>Contact</th>
            <th>Accept(Y/N)</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @invitations.each do |invitation| %>
            <tr>
              <td><%= invitation.trip.name %></td>
              <td><%= invitation.user_name %></td>
              <td><%= invitation.user_email %></td>
              <td><%= link_to 'Show', invitation %></td>
              <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

<%= yield %>

</body>
</html>


