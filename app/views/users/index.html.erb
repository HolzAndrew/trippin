<p id="notice"><%= notice %></p>

<% if !current_user %> 
<div class="user_signup">
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#signup" aria-controls="signup" role="tab" data-toggle="tab">Signup</a></li>
    <li role="presentation"><a href="#login" aria-controls="login" role="tab" data-toggle="tab">Login</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">

    <div role="tabpanel" class="tab-pane fade in active" id="signup">

      <%= form_for :user, url: '/users' do |f| %>
        Name: <%= f.text_field :name %> <br>
        Email: <%= f.text_field :email %> <br>
        Image_url: <%= f.text_field :image_url %> <br>
        Password: <%= f.password_field :password %> <br>
        Password Confirmation: <%= f.password_field :password_confirmation %> <br>
        <button type="submit" class="signup">Signup</button>
      <% end %>

    </div>

    <div role="tabpanel" class="tab-pane fade" id="login">
      <%= form_tag '/login' do %>
        Email: <%= text_field_tag :email %> <br>
        Password: <%= password_field_tag :password %> <br>
        <button type="submit" class="login">Login</button>
      <% end %>

    </div>
  </div>
</div>
<% end %>

